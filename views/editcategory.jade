extends layout
block content
    .container
     .row
      .col-md-6.col-md-offset-3
        each row in res1
         form.form-horizontal(action='', method='post')
          fieldset
            legend.text-center Edit Category
            .form-group
              label.col-md-3.control-label(for="newname") Product Category Name:
              .col-md-9
                input#name.form-control(name="newname", type="text", value="#{row.category_name}")
            .form-group
              label.col-md-3.control-label(for="newdescr") Long Description:
              .col-md-9
                input#price.form-control(name="newdescr", type="text", value="#{row.category_desc}")
            .form-group
              label.col-md-3.control-label(for="newimage") Image:
              .col-md-9
                input#image.form-control(name="newimage", type="text", value="#{row.category_image}")
            button.btn.btn-secondary(type="edit") Edit Product Category 
            
