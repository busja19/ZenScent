                br
               a.button.btn.btn-secondary(href="/cart/#{row.ProductId}") Add to cart
               a.button.btn.btn-secondary(href="/product/#{row.ProductId}") View Product

    
              a.button.btn.btn-secondary(href="/reviews") View Product Reviews
