block content
 .container
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in
      |  Login
    // show any messages that come back with authentication
    | <% if (message.length > 0) { %>
    .alert.alert-danger <%= message %>
    |             <% } %>
    // LOGIN FORM
    form(action='/login', method='post')
      .form-group
        label Username
        input.form-control(type='text', name='username')
      .form-group
        label Password
        input.form-control(type='password', name='password')
      .form-group
        label Remember Me
        input.form-control(type='checkbox', name='remember', value='yes')
      button.btn.btn-warning.btn-lg(type='submit') Login
    hr
    p
      | Need an account? 
      a(href='/signup') Signup
    p
