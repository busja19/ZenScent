extends layout
block content
    .container
     .row
      .col-md-8.col-md-offset-3
        each review in indOne
         form.form-horizontal(action='', method='post')
          fieldset
            legend.text-center Edit Review
            .form-group
              label.col-md-3.control-label(for="name") Your Name:
              .col-md-9
                input#name.form-control(name="name", type="text", value="#{review.Name}")
            .form-group
              label.col-md-3.control-label(for="content") Your updated review:
              .col-md-9
                input#price.form-control(name="content", type="text", value="#{review.content}")

              br  
              a.button.btn.btn-secondary(type="submit") Edit This Review