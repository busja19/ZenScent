extends layout
block content
   section#products 
    a.button.btn.btn-secondary(href="/createproduct") Create New Product
    .content-section-a

         .prod-container
           each row in res1
              .item 
                p.product1 Product Id: #{row.ProductId}         
                h1.product #{row.productname}
                h4.itemp Category: #{row.category_name}
                img.pimage(src="#{row.productimage}", alt="#{row.productimage}")
                h2.price Price: &euro;#{row.price}
                p.itemp Description: #{row.productdescr}
                br
                br
               

               a.button.btn.btn-light(href="/product/#{row.ProductId}") Show #{row.productname}
               a.button.btn.btn-light(href="/editproduct/#{row.ProductId}") Edit Product
               a.button.btn.btn-light(href="/deleteproduct/#{row.ProductId}") Delete Product
               br
               hr
 