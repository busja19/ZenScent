extends layout
block content
    .row
      h1 Please add new Product
      .formHold
        h1.itemtitle New Product Form
        form(method="post")
       
          fieldset
          
            label(for="productname") Product Name:
            input(name="productname", type="text", placeholder="Product Name")

            label(for="Id") Category Id:
            input(name="Id", type="int", placeholder="Category Id")


            label(for="price") Price:
            input(name="price", type="int", placeholder="Price")
            
            label(for="Qty") Qty:
            input(name="Qty", type="int", placeholder="Qty")
            
            label(for="productdescr") Description:
            input(name="productydescr", type="text", placeholder="Description")
            
            label(for="productimage") Product Image:
            input(name="productimage", type="text", placeholder="Image")

            button.btn.btn-secondary(type="submit") Create Product
