extends layout
block content
 .header
  .container
    
       center
         h2 Categories
  .header
   section#home
   .content-section-b
       .container
         h3(style='text-align:center')
           | categories
         hr
         .row
           .col-sm-12
             p.lead
               | some text
               br
               br
               | some text
               br

   section#products 
    a.btn1(href="/create") Create New Category
    .content-section-a

         .prod-container
           each row in res1
              .item 
                h1.category #{row.category_name}
                p.itemp Description: #{row.category_descr}
                img.pimage(src="#{row.category_image}", alt="#{row.category_image}")

                a.btn1(href="/item/#{row.Id}") Show Category #{row.category_name}
                a.btn1(href="/createcategory/#{row.Id}") Create New Category
                a.btn1(href="/editcategory/#{row.Id}") Edit Category
                a.btn1(href="/deletecategory/#{row.Id}") Delete Category