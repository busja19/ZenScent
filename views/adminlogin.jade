           input.input100(type='text', name='username', placeholder='Type your username')
           span.focus-input100

         .wrap-input100.validate-input(data-validate='Password is required')
           span.label-input100 Password
           input.input100(type='password', name='pass', placeholder='Type your password')
           span.focus-input100

         if (message.length > 0)
           #alert
             .alert.alert-success= message   

         .text-right.p-t-8.p-b-31
           a(href='/retrieve')
             | Forgot password?
         .container-login100-form-btn
           .wrap-login100-form-btn
             .login100-form-bgbtn
             button.login100-form-btn(type='submit') Login

             button.btn.btn-warning.btn-lg(type='submit') Login
         .form-group
              input#submit.form-submit(type='submit', name='login', value='login')
            
         .txt1.text-center.p-t-54.p-b-20         
           span
             | .
        .container-login100-form-btn
          .wrap-login100-form-btn
            .login100-form-bgbtn
            button.login100-form-btn
              a(href='/signup')  Register

         
         .txt1.text-center.p-t-54.p-b-20         
           span
             | Or Sign Up Using
             
         .flex-c-m
           a.login100-social-item.bg1(href='/auth/facebook')
             i.fa.fa-facebook
           a.login100-social-item.bg2(href='/auth/twitter')
             i.fa.fa-twitter
           a.login100-social-item.bg3(href='/auth/google')
             i.fa.fa-google

  #dropDownSelect1
  
  
  
   .container
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in
      |  Login
      if (message.length > 0)
        #alert
          .alert.alert-success= message
          .text-right.p-t-8.p-b-31
    // LOGIN FORM
    form(action='/login', method='post')
      .form-group
        label Username
        input.form-control(type='text', name='username')
      .form-group
        label Password
        input.form-control(type='password', name='password')
      .form-group
        label Remember Me
        input.form-control(type='checkbox', name='remember', value='yes')
      button.btn.btn-warning.btn-lg(type='submit') Login
    hr
    p
      | Need an account? 
      a(href='/signup') Signup
    p
      | Or go 
      a(href='/') home
      | .
      
      
