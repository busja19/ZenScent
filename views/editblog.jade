extends layout
block content
   
   .row
   h3 Edit Blog
   .formhold
     form(action='', method='post')
      each blog in indOne  
         form.form-horizontal(action='', method='post')
          fieldset
            legend.text-center Edit Blog
            .form-group
              label.col-md-3.control-label(for="title") Blog Title:
              .col-md-9
                input#name.form-control(name="title", type="text", required='', value= blog.title)

            .form-group
              label.col-md-3.control-label(for="content") Blog Post:
              .col-md-9
                textarea#exampleTextarea.form-control(name='content', type="text", rows='3', value= blog.content, , required='')        

            .form-group
              label.col-md-3.control-label(for="image") Image:
              .col-md-9
                input#name.form-control(name="image", type="text", required='', value= blog.image)     

           button.btn.btn-secondary(type="submit") Update Blog

